<p id="notice"><%= notice %></p>

<div class="col-lg-12 text-center">
<h1>Listing Pages</h1>
<% if user_signed_in? %>
  <%= link_to('logout', destroy_user_session_path, :method => :delete) %>
<% else %>
  <%= link_to 'Login', user_session_path %> 
<% end %>

   <p id="notice"><%= notice %></p>
    
      <h2>Name</h2>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><h1><%= page.name %></h1></td>
        <td><%= image_tag page.avatar.url(:thumb) %></td>
        <td><%= link_to 'Show', page, :class => "btn btn-default btn-lg" %>
        <%= link_to 'Edit', edit_page_path(page), :class => "btn btn-default btn-lg" %>
        <%= link_to 'Destroy', page, :class => "btn btn-default btn-lg", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

